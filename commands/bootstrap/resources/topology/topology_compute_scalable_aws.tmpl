{{ define "ComputeScalable" }}
      type: yorc.nodes.aws.Compute
      properties: {{formatAsYAML .Compute 8}}
      capabilities:
        endpoint:
          properties:
            credentials: {{formatAsYAML .Credentials 14}}
            secure: true
            protocol: tcp
            network_name: PRIVATE
            initiator: source
        os:
          properties:
            type: linux
        scalable:
          properties:
            min_instances: 1
            max_instances: 5
            default_instances: 3
{{ end }}
